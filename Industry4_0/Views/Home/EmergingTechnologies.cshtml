<div class="fb">
    @{
        if (User.IsInRole("Administrator") || User.IsInRole("User"))
        {
            <a class="btn post" href="~/EmergingTechnologiesFeedbacks/Create">Submit your feedback</a>
        }
        else
        {
            <div style="text-align:center">Please <a href="~/Account/Login?ReturnUrl=~/Home/EmergingTechnologies/#feedback">login</a> or <a href="~/Account/Register">create an account</a> to post of this page!</div>
        }
    }
    @model IEnumerable<Industry4_0.Models.EmergingTechnologiesFeedback>


    @{
        int index = 1;
        @foreach (var item in Model)
        {

            <h2>
                @Html.DisplayFor(modelItem => item.Heading)
            </h2>
            <h3>
                @Html.DisplayFor(modelItem => item.EmergingTechnologies)
            </h3>
            <h4>
                @Html.DisplayFor(modelItem => item.Rating)
                @{
                    int numStars = item.Rating;
                    for (int i = 0; i < numStars; i++)
                    {
                        <span style="color: #f8bd08; ">&#x2605;</span>
                    }
                    for (int i = 0; i < 5 - numStars; i++)
                    {
                        <span>&#x2606;</span>
                    }
                }

            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Feedback)
            </p>
            <div>
                Feedback by @Html.DisplayFor(modelItem => item.Username) on @Html.DisplayFor(modelItem => item.Date)
            </div>
            <div style="margin-top: 20px">

                <a asp-controller="EmergingTechnologiesFeedbacks" asp-action="Details" asp-route-id="@item.ID" class="btn btn-default">Details</a>
                <a asp-controller="EmergingTechnologiesFeedbacks" asp-action="Agree" asp-route-id="@item.ID" class="agree btn greenbtn">Agree (@Html.DisplayFor(modelItem => item.Agree))</a>
                <a asp-controller="EmergingTechnologiesFeedbacks" asp-action="Disagree" asp-route-id="@item.ID" class="disagree btn redbtn">Disagree (@Html.DisplayFor(modelItem => item.Disagree))</a>

                @{
                    if (User.IsInRole("Administrator"))
                    {
                        <div class="pull-right">
                            <a asp-controller="EmergingTechnologiesFeedbacks" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-default">Edit</a>
                            <a asp-controller="EmergingTechnologiesFeedbacks" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-default" onclick="return confirm('Are you sure you want to delete this file?')">Delete</a>
                        </div>
                    }
                }
            </div>

            index++;
            <hr class="line" />
        }
    }
</div>


